<?xml version="1.0" encoding="utf-8"?>
<ShellsConfiguration
    xmlns:xsd="http://www.w3.org/2001/XMLSchema"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xmlns="http://schemas.qualisystems.com/ResourceManagement/ShellsConfigurationSchema.xsd">
    <ResourceTemplates>
        <ResourceTemplate Name="Microsoft Azure" Model="Microsoft Azure" Driver="Azure Shell Driver" AddressRequired="false">
            <Description>Azure template will create a Azure resource in CloudShell. Once the Azure is modeled correctly in CloudShell it will be possible to deploy Apps on Microsoft Azure.</Description>
            <AutoLoad Enable="true">
                <Description>After filling in all the inputs click Start Discovery to complete the cloud provider creation process</Description>
            </AutoLoad>
            <Attributes>
                <Attribute Name="Region" Value="" />
                <Attribute Value="Standard_A3" Name="VM Size"/>
                <Attribute Value="" Name="Networks In Use"/>
                <Attribute Value="" Name="Azure Subscription ID"/>
                <Attribute Value="" Name="Azure Tenant ID"/>
                <Attribute Value="" Name="Azure Secret"/>
                <Attribute Value="" Name="Azure Client ID"/>
                <Attribute Value="" Name="Management Group Name"/>
            </Attributes>
        </ResourceTemplate>
    </ResourceTemplates>
</ShellsConfiguration>
