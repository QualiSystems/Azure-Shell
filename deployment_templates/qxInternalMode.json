{
	"$schema": "https://schema.management.azure.com/schemas/2015-01-01/qxExternalMode.json#",
	"contentVersion": "1.0.0.0"	,
	"variables":{	
		"qx_nic_name":"QualiX-VM-NIC",
		"virtualMachineQxName": "QualiX-VM",		
		"nsg_management_name" : "QualiX-NSG"
	},
	"parameters":{
		"vmSize":{
			"type": "String"
		},
		"adminUsername": {
            "type": "string"
        },
        "adminPassword": {
            "type": "securestring"
        },	
		"virtualNetworks_mgmt_vnet_name": {
			"defaultValue": "management_vnet",
			"type": "String"
		},
		"storageAccountName":{
			"type":"string"
		},
		"storageBlob":{
			"type":"string"
		},
		"SubnetRef":{
			"type":"string"
		},
		"scriptUrl":{
			"type": "String"
		},
		"scriptName":{
			"type": "String"
		},
		"commandToExe":{
			"type": "String"
		}
	},
	"resources":[		
		{
			"name": "[variables('virtualMachineQxName')]",
			"type": "Microsoft.Compute/virtualMachines",
			"apiVersion": "2015-06-15",
			"location": "[resourceGroup().location]",
			"tags": {
				"CreatedBy": "CloudShell",
				"Role": "Management"
			},
			"dependsOn": [
				"[concat('Microsoft.Network/networkInterfaces/', variables('qx_nic_name'))]"				
			],
			"properties": {
				"osProfile": {
					"computerName": "[variables('virtualMachineQxName')]",
					"adminUsername": "[parameters('adminUsername')]",
					"adminPassword": "[parameters('adminPassword')]"
				},
				"hardwareProfile": {
					"vmSize": "[parameters('vmSize')]"
				},
				"storageProfile": {
					"imageReference": {
						"publisher": "OpenLogic",
						"offer": "CentOS",
						"sku": "7.4",
						"version": "latest"
					},
					"osDisk": {
						"name": "[variables('virtualMachineQxName')]",
						"vhd": {
							"uri": "[concat(concat(reference(parameters('storageBlob'), '2015-06-15').primaryEndpoints['blob'], 'vhds/'), variables('virtualMachineQxName'), '2016102316823.vhd')]"
						},
						"createOption": "fromImage"
					},
					"dataDisks": []
				},
				"networkProfile": {
					"networkInterfaces": [
						{
							"id": "[resourceId('Microsoft.Network/networkInterfaces', variables('qx_nic_name'))]"
						}
					]
				}
			}
		},	
		
		
		
		{
		  "type": "Microsoft.Compute/virtualMachines/extensions",
		  "name": "[concat(variables('virtualMachineQxName'), '/', parameters('scriptName'))]",
		  "apiVersion": "2015-06-15",
		  "location": "[resourceGroup().location]",
		  "tags": {
			"CreatedBy": "CloudShell",
			"Role": "Management"
		  },
		  "dependsOn": ["[concat('Microsoft.Compute/virtualMachines/', variables('virtualMachineQxName'))]"],
		  "properties": {
			"publisher": "Microsoft.Azure.Extensions",
			"type": "CustomScript",
			"typeHandlerVersion": "2.0",			
			"settings": {
			  "fileUris": ["[parameters('scriptUrl')]"]
			},
			"protectedSettings": {
				"commandToExecute": "[parameters('commandToExe')]"
			}
		  }
		},
		
		
		
		{
				"name": "[variables('qx_nic_name')]",
				"type": "Microsoft.Network/networkInterfaces",
				"apiVersion": "2016-09-01",
				"location": "[resourceGroup().location]",
				"tags": {
				  "CreatedBy": "CloudShell",
				  "Role": "Management"
				},
				"dependsOn": [										
					"[concat('Microsoft.Network/networkSecurityGroups/', variables('nsg_management_name'))]"
				],
				"properties": {			
					"networkSecurityGroup": {
						  "id": "[resourceId('Microsoft.Network/networkSecurityGroups', variables('nsg_management_name'))]"
					},
					"ipConfigurations": [
						{
							"name": "ipconfig2",
							"properties": {
									"subnet": {  
										"id":"[parameters('SubnetRef')]"
									},
									"privateIPAllocationMethod": "Dynamic"			
							}
						}
					]
				}
		},
		{
		  "apiVersion": "2016-06-01",
		  "type": "Microsoft.Network/networkSecurityGroups",
		  "name": "[variables('nsg_management_name')]",
		  "location": "[resourceGroup().location]",
		  "tags": {
			"CreatedBy": "CloudShell",
			"Role": "Management"
		  },
		  "properties": {
			"securityRules": [
			  {
				"name": "first_rule",
				"properties": {
				  "description": "This is the first rule",
				  "protocol": "Tcp",
				  "sourcePortRange": "*",
				  "destinationPortRange": "443",
				  "sourceAddressPrefix": "*",
				  "destinationAddressPrefix": "*",
				  "access": "Allow",
				  "priority": 1000,
				  "direction": "Inbound"
				}
			  },			  			 
			  {
				"name": "second_rule",
				"properties": {
				  "description": "This is the second rule",
				  "protocol": "Tcp",
				  "sourcePortRange": "*",
				  "destinationPortRange": "80",
				  "sourceAddressPrefix": "*",
				  "destinationAddressPrefix": "*",
				  "access": "Allow",
				  "priority": 1010,
				  "direction": "Inbound"
				}
			  }			 
			]
		  }
		}
	]
}