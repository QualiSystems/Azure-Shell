{
	"$schema": "https://schema.management.azure.com/schemas/2015-01-01/deploymentTemplate.json#",
	"contentVersion": "1.0.0.0",
	"parameters": {
		"management_vnet_CIDR":{
			"defaultValue":"192.168.120.0/24",
			"type":"String"
		},	
		"management_vnet_subnet_CIDR":{
			"defaultValue":"192.168.120.0/25",
			"type":"String"
		},
		"virtualNetworks_mgmt_vnet_name": {
			"defaultValue": "mgmt_vnet",
			"type": "String"
		},
		"virtualNetworks_sandbox_vnet_name": {
			"defaultValue": "sandbox_vnet",
			"type": "String"
		},
        "region_name":{
            "defaultValue" : "brazilsouth",
            "type": "String"
        },
		"storageAccountType": {
		  "type": "string",
		  "defaultValue": "Standard_LRS",
		  "allowedValues": [
			"Standard_LRS",
			"Standard_GRS",
			"Standard_ZRS",
			"Premium_LRS"
		  ],
		  "metadata": {
			"description": "Storage Account type"
		  }
		}	
	},
	"variables": {
		"storageAccountName": "[concat(uniquestring(resourceGroup().id), 'standardsa')]"		
	},
	"resources": [{
		"type": "Microsoft.Network/virtualNetworks",
		"name": "[parameters('virtualNetworks_mgmt_vnet_name')]",
		"apiVersion": "2016-03-30",
		"location": "[parameters('region_name')]",
		"tags": {
			"network_type": "mgmt"
		},
		"properties": {
			"addressSpace": {
				"addressPrefixes": ["[parameters('management_vnet_CIDR')]"]
			},
			"subnets": [{
				"name": "default",
				"properties": {
					"addressPrefix": "[parameters('management_vnet_subnet_CIDR')]"
				}
			}]
		},
		"resources": [],
		"dependsOn": []
	},
	{
		"type": "Microsoft.Network/virtualNetworks",
		"name": "[parameters('virtualNetworks_sandbox_vnet_name')]",
		"apiVersion": "2016-03-30",
		"location": "[parameters('region_name')]",
		"tags": {
			"network_type": "sandbox"
		},
		"properties": {
			"addressSpace": {
				"addressPrefixes": ["10.0.0.0/8"]
			},
			"subnets": [{
				"name": "default",
				"properties": {
					"addressPrefix": "10.0.0.0/24"
				}
			}]
		},
		"resources": [],
		"dependsOn": []
	},
    {
      "type": "Microsoft.Storage/storageAccounts",
      "name": "[variables('storageAccountName')]",
      "apiVersion": "2016-01-01",
      "location": "[resourceGroup().location]",
      "sku": {
          "name": "[parameters('storageAccountType')]"
      },
      "kind": "Storage", 
      "properties": {
      }
    }],
  "outputs": {
      "storageAccountName": {
          "type": "string",
          "value": "[variables('storageAccountName')]"
      }
  }	
}